<html>
  <body> 
    <h1>All Drivers</h1>
    <nav>
      <a href="/drivers/new">Create New Drview</a>
    </nav>
    
    <ul>
    <% for (i in drivers) { %>
      <li>
        <%= drivers[i].name %>, 
      </li>
      <a href="/drivers/<%= drivers[i]._id  %>">SHOW</a>
      <a href="/drivers/<%= drivers[i]._id  %>/edit">EDIT</a>
      <form action="/drivers/<%= drivers[i]._id  %>?_method=DELETE" method="POST">
        <input type="submit" value="DELETE"/>
      </form>
      <% } %>
    </ul>
    </body>
</html>